{
  "name": "graphql-pair-opener",
  "displayName": "GraphQL Pair Opener",
  "description": "Automatically opens corresponding GraphQL type definitions and resolvers.",
  "version": "0.2.2",
  "publisher": "kylebrague",
  "license": "MIT",
  "repository": "https://github.com/kylebrague/graphql-pair-opener.git",
  "engines": {
    "vscode": "^1.80.0",
    "node": "22.x"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "graphql-pair-opener.openPair",
        "title": "Open Corresponding TypeDef/Resolver File"
      },
      {
        "command": "graphql-pair-opener.openBoth",
        "title": "Open Both TypeDef and Resolver Files"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "graphql-pair-opener.openPair",
          "group": "navigation@99",
          "when": "resourceLangId == 'graphql' || resourceLangId == 'typescript' || resourceLangId == 'javascript'"
        },
        {
          "command": "graphql-pair-opener.openBoth",
          "group": "navigation@99",
          "when": "resourceLangId == 'graphql' || resourceLangId == 'typescript' || resourceLangId == 'javascript'"
        }
      ],
      "editor/title/context": [
        {
          "command": "graphql-pair-opener.openPair",
          "group": "navigation@99",
          "when": "graphqlPairOpener.isInSupportedDir"
        },
        {
          "command": "graphql-pair-opener.openBoth",
          "group": "navigation@99",
          "when": "graphqlPairOpener.isInSupportedDir"
        }
      ]
    },
    "configuration": {
      "title": "GraphQL Pair Opener",
      "properties": {
        "graphqlPairOpener.resolverPath": {
          "type": "string",
          "default": "src/graphql/resolvers",
          "description": "The workspace-relative path to your GraphQL resolver files (e.g., 'src/resolvers')."
        },
        "graphqlPairOpener.typeDefPath": {
          "type": "string",
          "default": "src/graphql/typeDefs",
          "description": "The workspace-relative path to your GraphQL type definition files (e.g., 'src/schemas')."
        },
        "graphqlPairOpener.openInSplitView": {
          "type": "boolean",
          "default": true,
          "description": "If checked, the corresponding file will open in a new split-view panel. If unchecked, it will open as a new tab in the current panel."
        },
        "graphqlPairOpener.usePreviewMode": {
          "type": "boolean",
          "default": false,
          "description": "If checked, the file will open in preview mode (italicized tab). If unchecked, it will open as a persistent tab."
        }
      }
    }
  },
  "scripts": {
    "lint": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true ",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "prepackage": "npm run lint && npm run compile",
    "build": "npm run lint && npm run compile && vsce package",
    "remove-old-vsix": "ls -tp *.vsix | grep -v '/$' | tail -n +2 | xargs -r rm --",
    "install-latest-vsix": "ls -tp *.vsix | grep -v '/$' | head -1 | xargs -r code --install-extension",
    "build:install": "npm run build && npm run install-latest-vsix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.9.2"
  }
}
